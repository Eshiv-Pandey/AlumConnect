<% layout("/layouts/boilerplate.ejs") %>

<style>
  .profile-container {
    max-width: 800px;
    margin: 2rem auto;
    padding: 0 1rem;
  }

  .profile-title {
    color: #2c3e50;
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 2rem;
    font-weight: 300;
  }

  .profile-card {
    background: white;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    border: 1px solid rgba(0, 0, 0, 0.05);
    position: relative;
    overflow: hidden;
  }

  .profile-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
  }

  .profile-header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid #f1f3f4;
  }

  .avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea, #764ba2);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    font-weight: bold;
    margin-right: 1.5rem;
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
  }

  .profile-info {
    flex: 1;
  }

  .profile-name {
    font-size: 1.8rem;
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 0.5rem;
  }

  .profile-role {
    display: inline-block;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: capitalize;
  }

  .profile-details {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .detail-item {
    display: flex;
    flex-direction: column;
    background: #f8f9fa;
    padding: 1.2rem;
    border-radius: 12px;
    border-left: 4px solid #667eea;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .detail-item:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .detail-label {
    font-size: 0.85rem;
    color: #6c757d;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }

  .detail-value {
    font-size: 1rem;
    color: #2c3e50;
    font-weight: 500;
  }

  .empty-state {
    color: #6c757d;
    font-style: italic;
  }

  .actions {
    margin-top: 2rem;
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    position: relative;
    overflow: hidden;
  }

  .btn-primary {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
    color: white;
    text-decoration: none;
  }

  .btn-secondary {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
  }

  .btn-secondary:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .profile-container {
      padding: 0 0.5rem;
    }

    .profile-title {
      font-size: 2rem;
      margin-bottom: 1.5rem;
    }

    .profile-card {
      padding: 1.5rem;
    }

    .profile-header {
      flex-direction: column;
      text-align: center;
    }

    .avatar {
      margin-right: 0;
      margin-bottom: 1rem;
    }

    .profile-details {
      grid-template-columns: 1fr;
    }

    .actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      justify-content: center;
    }
  }
</style>

<div class="profile-container">
  <h1 class="profile-title">Your Profile</h1>
  
  <div class="profile-card">
    <div class="profile-header">
      <div class="avatar">
        <% if (profileUser.name) { %>
          <%= profileUser.name.split(' ').map(n => n[0]).join('').toUpperCase() %>
        <% } else { %>
          U
        <% } %>
      </div>
      <div class="profile-info">
        <div class="profile-name">
          <%= profileUser.name || "Complete your profile" %>
        </div>
        <span class="profile-role"><%= profileUser.role %></span>
      </div>
    </div>

    <div class="profile-details">
      <div class="detail-item">
        <span class="detail-label">Full Name</span>
        <span class="detail-value">
          <% if (profileUser.name) { %>
            <%= profileUser.name %>
          <% } else { %>
            <span class="empty-state">Not provided</span>
          <% } %>
        </span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Email Address</span>
        <span class="detail-value"><%= profileUser.email %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Role</span>
        <span class="detail-value" style="text-transform: capitalize;"><%= profileUser.role %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Universities</span>
        <span class="detail-value">
          <% if (profileUser.universities && profileUser.universities.length > 0) { %>
            <% profileUser.universities.forEach(function(uni, index) { %>
              <%= uni.name %> (<%= uni.location %>)
              <%= index < profileUser.universities.length - 1 ? "," : "" %>
            <% }); %>
          <% } else { %>
            Not specified
          <% } %>
        </span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Member Since</span>
        <span class="detail-value"><%= profileUser.joinDate %></span>
      </div>
      
      <div class="detail-item">
        <span class="detail-label">Account Status</span>
        <span class="detail-value">Active</span>
      </div>
    </div>

    <div class="actions">
      <a href="/profile/editpassword" class="btn btn-primary">Edit Password</a>
      <a href="/profile/editprofile" class="btn btn-primary">Edit Profile</a>
      <a href="/auth/logout" class="btn btn-secondary">Log Out</a>
    </div>
  </div>
</div>
