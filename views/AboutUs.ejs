<!-- Phase-5 -->
<div class="phase-5">
  <br><br><br>
  <h1>Contact Us</h1>
  <p>Have questions or want to learn more about AlumConnect? We'd love to hear from you.</p>
  <div class="row">

    <div class="card cc col-lg-6 col-12" style="width: 25rem; height: 20rem;">
      <% if (typeof status !== 'undefined' && status === 'success') { %>
        <div class="alert alert-success">✅ Your message has been sent successfully!</div>
      <% } else if (typeof status !== 'undefined' && status === 'error') { %>
        <div class="alert alert-danger">❌ Something went wrong. Please try again later.</div>
      <% } %>
    
      <form method="post" action="/contact">
        <label for="name" class="form-label">Your Name</label>
        <input type="text" class="form-control" name="name" required>
    
        <label for="email" class="form-label">Email Address</label>
        <input type="email" class="form-control" name="email" required>
    
        <label for="message" class="form-label">Message</label>
        <textarea class="form-control" name="message" required></textarea>
    
        <br><br>
        <button type="submit" class="btn btn-primary" style="background-color:#007AFF;">Send Message</button>
      </form>
    </div>
    

    <div class="card col-lg-6 col-12" style="width: 25rem; height: 20rem;" class="p-3">
        <div class="card-title fw-bold mb-3"><h4>Our Information</h4></div>
    
        <div class="info-item">
          <i class="fa-regular fa-building" style="color: #007AFF;"></i>
          <span class="label">Address</span>
          <div class="value">123 Education Lane, San Francisco, CA 94105</div>
        </div>
    
        <div class="info-item">
          <i class="fa-regular fa-envelope" style="color: #007AFF;"></i>
          <span class="label">Email</span>
          <div class="value">contact@alumconnect.com</div>
        </div>
    
        <div class="info-item">
          <i class="fa-solid fa-phone" style="color: #007AFF;"></i>
          <span class="label">Phone</span>
          <div class="value">+1 (555) 123-4567</div>
        </div>
      
    </div>
    

  </div>

</div>

