<% layout("/layouts/boilerplate.ejs") %>

<style>
  .forgot-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: -20px;
    padding: 20px;
  }

  .forgot-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    max-width: 500px;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .forgot-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
  }

  .forgot-title {
    color: #2c3e50;
    font-size: 1.8rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .forgot-subtitle {
    color: #6c757d;
    text-align: center;
    margin-bottom: 2.5rem;
    font-size: 1rem;
    line-height: 1.5;
  }

  .form-group {
    margin-bottom: 2rem;
  }

  .form-label {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
  }

  .form-input {
    width: 100%;
    padding: 1rem 1.2rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f8f9fa;
  }

  .form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-input::placeholder {
    color: #adb5bd;
  }

  .submit-btn {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .submit-btn:hover::before {
    left: 100%;
  }

  .back-link {
    display: block;
    text-align: center;
    margin-top: 2rem;
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #764ba2;
    text-decoration: none;
  }

  .icon-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .forgot-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
  }

  @media (max-width: 768px) {
    .forgot-container {
      padding: 1rem;
      margin: -10px;
    }

    .forgot-card {
      padding: 2rem;
    }

    .forgot-title {
      font-size: 1.5rem;
    }

    .forgot-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
  }

  /* Loading state for button */
  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }
</style>

<div class="forgot-container">
  <div class="forgot-card">
    <div class="icon-container">
      <div class="forgot-icon">
        üîê
      </div>
    </div>
    
    <h2 class="forgot-title">Forgot Your Password?</h2>
    <p class="forgot-subtitle">No worries, we've got your back! Enter your email address and we'll send you a reset link.</p>
    
    <form method="POST" action="/auth/forgot">
      <div class="form-group">
        <label for="email" class="form-label">Email Address</label>
        <input 
          type="email" 
          id="email"
          name="email" 
          placeholder="Enter your registered email" 
          class="form-input" 
          required 
          autocomplete="email"
        >
      </div>
      
      <button type="submit" class="submit-btn">
        Send Reset Link
      </button>
    </form>
    
    <a href="/login" class="back-link">‚Üê Back to Login</a>
  </div>
</div>

<script>
  // Add loading state to form submission
  document.querySelector('form').addEventListener('submit', function(e) {
    const button = this.querySelector('.submit-btn');
    button.disabled = true;
    button.textContent = 'Sending...';
    
    // Re-enable after 5 seconds in case of slow response
    setTimeout(() => {
      button.disabled = false;
      button.textContent = 'Send Reset Link';
    }, 5000);
  });

  // Auto-focus email input
  document.getElementById('email').focus();
</script>