<% layout("/layouts/boilerplate.ejs") %>

<style>
  .password-container {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    margin: -20px;
    padding: 20px;
  }

  .password-card {
    background: white;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    max-width: 500px;
    width: 100%;
    position: relative;
    overflow: hidden;
  }

  .password-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #667eea, #764ba2, #f093fb, #f5576c);
  }

  .password-title {
    color: #2c3e50;
    font-size: 2rem;
    font-weight: 600;
    text-align: center;
    margin-bottom: 2rem;
  }

  .icon-container {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
  }

  .password-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, #667eea, #764ba2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 2rem;
    box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
  }

  .alert {
    padding: 1rem 1.2rem;
    border-radius: 12px;
    margin-bottom: 1.5rem;
    font-weight: 500;
    border-left: 4px solid;
  }

  .alert-error {
    background-color: #f8d7da;
    color: #721c24;
    border-left-color: #dc3545;
  }

  .alert-success {
    background-color: #d1edff;
    color: #0c5460;
    border-left-color: #28a745;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-label {
    color: #2c3e50;
    font-weight: 600;
    margin-bottom: 0.5rem;
    display: block;
    font-size: 0.95rem;
  }

  .form-input {
    width: 100%;
    padding: 1rem 1.2rem;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    font-size: 1rem;
    transition: all 0.3s ease;
    background: #f8f9fa;
    position: relative;
  }

  .form-input:focus {
    outline: none;
    border-color: #667eea;
    background: white;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .password-input-wrapper {
    position: relative;
  }

  .password-toggle {
    position: absolute;
    right: 12px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    color: #6c757d;
    cursor: pointer;
    padding: 5px;
    font-size: 1.1rem;
  }

  .password-toggle:hover {
    color: #667eea;
  }

  .submit-btn {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.05rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    margin-top: 1rem;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .submit-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s;
  }

  .submit-btn:hover::before {
    left: 100%;
  }

  .back-link {
    display: block;
    text-align: center;
    margin-top: 2rem;
    color: #667eea;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #764ba2;
    text-decoration: none;
  }

  .password-requirements {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 1rem;
    margin-bottom: 1.5rem;
    border-left: 4px solid #17a2b8;
  }

  .password-requirements h6 {
    color: #2c3e50;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
  }

  .password-requirements ul {
    margin: 0;
    padding-left: 1.2rem;
    font-size: 0.85rem;
    color: #6c757d;
  }

  .password-requirements li {
    margin-bottom: 0.25rem;
  }

  /* Tablet styles */
  @media (max-width: 992px) {
    .password-card {
      max-width: 450px;
      padding: 2.5rem;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .password-container {
      padding: 1rem;
      margin: -10px;
      min-height: 100vh;
    }

    .password-card {
      padding: 2rem;
      max-width: 400px;
    }

    .password-title {
      font-size: 1.6rem;
    }

    .password-icon {
      width: 60px;
      height: 60px;
      font-size: 1.5rem;
    }
  }

  /* Small mobile styles */
  @media (max-width: 480px) {
    .password-container {
      padding: 0.5rem;
    }

    .password-card {
      padding: 1.5rem;
      border-radius: 15px;
    }

    .password-title {
      font-size: 1.4rem;
    }

    .form-input {
      padding: 0.875rem 1rem;
    }

    .submit-btn {
      padding: 0.875rem;
      font-size: 1rem;
    }
  }

  /* Large screens */
  @media (min-width: 1200px) {
    .password-card {
      max-width: 550px;
      padding: 3.5rem;
    }

    .password-title {
      font-size: 2.2rem;
    }
  }

  .submit-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none;
  }
</style>

<div class="password-container">
  <div class="password-card">
    <div class="icon-container">
      <div class="password-icon">
        üîë
      </div>
    </div>
    
    <h2 class="password-title">Change Password</h2>
    
    <!-- Error Message -->
    <% if (typeof error !== "undefined") { %>
      <div class="alert alert-error">
        <%= error %>
      </div>
    <% } %>
    
    <!-- Success Message -->
    <% if (typeof success !== "undefined") { %>
      <div class="alert alert-success">
        <%= success %>
      </div>
    <% } %>

    <!-- Password Requirements -->
    <div class="password-requirements">
      <h6>Password Requirements:</h6>
      <ul>
        <li>At least 8 characters long</li>
        <li>Include uppercase and lowercase letters</li>
        <li>Include at least one number</li>
        <li>Include at least one special character</li>
      </ul>
    </div>
    
    <form action="/profile/editpassword" method="POST">
      <div class="form-group">
        <label for="oldpass" class="form-label">Current Password</label>
        <div class="password-input-wrapper">
          <input 
            type="password" 
            id="oldpass"
            name="oldpass" 
            class="form-input" 
            required 
            autocomplete="current-password"
          >
          <button type="button" class="password-toggle" onclick="togglePassword('oldpass')">üëÅÔ∏è</button>
        </div>
      </div>
      
      <div class="form-group">
        <label for="newpass" class="form-label">New Password</label>
        <div class="password-input-wrapper">
          <input 
            type="password" 
            id="newpass"
            name="newpass" 
            class="form-input" 
            required 
            autocomplete="new-password"
            minlength="8"
          >
          <button type="button" class="password-toggle" onclick="togglePassword('newpass')">üëÅÔ∏è</button>
        </div>
      </div>
      
      <div class="form-group">
        <label for="confirmpass" class="form-label">Confirm New Password</label>
        <div class="password-input-wrapper">
          <input 
            type="password" 
            id="confirmpass"
            name="confirmpass" 
            class="form-input" 
            required 
            autocomplete="new-password"
            minlength="8"
          >
          <button type="button" class="password-toggle" onclick="togglePassword('confirmpass')">üëÅÔ∏è</button>
        </div>
      </div>
      
      <button type="submit" class="submit-btn">
        Change Password
      </button>
    </form>
    
    <a href="/profile" class="back-link">‚Üê Back to Profile</a>
  </div>
</div>

<script>
  // Password toggle functionality
  function togglePassword(fieldId) {
    const field = document.getElementById(fieldId);
    const button = field.nextElementSibling;
    
    if (field.type === 'password') {
      field.type = 'text';
      button.textContent = 'üôà';
    } else {
      field.type = 'password';
      button.textContent = 'üëÅÔ∏è';
    }
  }

  // Form validation
  document.querySelector('form').addEventListener('submit', function(e) {
    const newPass = document.getElementById('newpass').value;
    const confirmPass = document.getElementById('confirmpass').value;
    const submitBtn = this.querySelector('.submit-btn');
    
    if (newPass !== confirmPass) {
      e.preventDefault();
      alert('New passwords do not match!');
      return;
    }
    
    // Add loading state
    submitBtn.disabled = true;
    submitBtn.textContent = 'Changing Password...';
    
    // Re-enable after 10 seconds in case of slow response
    setTimeout(() => {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Change Password';
    }, 10000);
  });

  // Password strength indicator (optional enhancement)
  document.getElementById('newpass').addEventListener('input', function() {
    const password = this.value;
    const requirements = document.querySelector('.password-requirements ul');
    const items = requirements.querySelectorAll('li');
    
    // Reset all items
    items.forEach(item => {
      item.style.color = '#6c757d';
      item.style.textDecoration = 'none';
    });
    
    // Check length
    if (password.length >= 8) {
      items[0].style.color = '#28a745';
      items[0].style.textDecoration = 'line-through';
    }
    
    // Check for uppercase and lowercase
    if (/[a-z]/.test(password) && /[A-Z]/.test(password)) {
      items[1].style.color = '#28a745';
      items[1].style.textDecoration = 'line-through';
    }
    
    // Check for number
    if (/\d/.test(password)) {
      items[2].style.color = '#28a745';
      items[2].style.textDecoration = 'line-through';
    }
    
    // Check for special character
    if (/[!@#$%^&*(),.?":{}|<>]/.test(password)) {
      items[3].style.color = '#28a745';
      items[3].style.textDecoration = 'line-through';
    }
  });
</script>